<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical" android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="35dp"
    tools:ignore="MissingDefaultResource">
    <ImageButton android:id="@+id/mediacontroller_play_pause" android:background="#00000000" android:layout_width="28dp" android:layout_height="28dp" android:layout_marginLeft="12dp" android:src="@drawable/mediacontroller_pause_button" android:scaleType="centerInside"/>
    <TextView android:id="@+id/mediacontroller_time_current" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" style="@style/MediaController_Text"/>
    <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="35dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_weight="1">
        <SeekBar android:id="@+id/mediacontroller_seekbar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="20dp" android:max="1000" android:progress="0" android:secondaryProgress="0" android:progressDrawable="@drawable/ic_progress_drawable_media_controller" android:thumb="@drawable/selector_seek_thumb_media_controller" android:thumbOffset="0dp" android:paddingStart="0dp" android:paddingEnd="0dp" style="?android:attr/progressBarStyleHorizontal"/>
        <ImageView android:id="@+id/start_point" android:visibility="gone" android:clickable="false" android:layout_width="5dp" android:layout_height="5dp" android:src="@drawable/selector_seek_thumb_media_controller_start" android:layout_alignTop="@+id/mediacontroller_seekbar" android:layout_alignBottom="@+id/mediacontroller_seekbar"/>
        <ImageView android:id="@+id/end_point" android:visibility="gone" android:clickable="false" android:layout_width="5dp" android:layout_height="5dp" android:src="@drawable/selector_seek_thumb_media_controller_start" android:layout_alignTop="@+id/mediacontroller_seekbar" android:layout_alignBottom="@+id/mediacontroller_seekbar"/>
    </RelativeLayout>
    <TextView android:id="@+id/mediacontroller_time_total" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/tv_time_delimiter" style="@style/MediaController_Text"/>
    <TextView android:id="@+id/mediacontroller_right_text_view" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:singleLine="true" android:layout_toLeftOf="@+id/tv_media_controller_right_speed" android:layout_centerVertical="true" style="@style/MediaController_Text"/>
   <TextView android:textSize="14sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tv_media_controller_right_speed" android:visibility="visible" android:layout_width="50dp" android:layout_height="35dp" android:text="1.0X" android:singleLine="true" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <ImageView android:id="@+id/iv_video_hv"
        android:layout_height="48dp"
        android:layout_width="48dp"
        ></ImageView>

</LinearLayout>
